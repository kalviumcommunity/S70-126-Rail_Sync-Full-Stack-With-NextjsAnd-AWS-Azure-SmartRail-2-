datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


// Add a User model to make bookings
model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  bookings Booking[] // Relation to bookings
}

model Train {
  id            Int      @id @default(autoincrement())
  trainNumber   String   @unique
  name          String
  currentStatus String
  
  // ADD THIS: Inventory for the transaction
  availableSeats Int     @default(100) 
  
  schedule      Schedule[]
  bookings      Booking[]
}

// Add a Booking model (equivalent to 'Order' in the assignment)
model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  trainId   Int
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
  train     Train    @relation(fields: [trainId], references: [id])
}

// ... your existing Station and Schedule models remain the same
model Station {
  id       Int        @id @default(autoincrement())
  code     String     @unique
  name     String
  schedules Schedule[]
}

model Schedule {
  id            Int      @id @default(autoincrement())
  trainId       Int
  stationId     Int
  arrivalTime   DateTime
  departureTime DateTime
  sequenceOrder Int
  
  train         Train    @relation(fields: [trainId], references: [id])
  station       Station  @relation(fields: [stationId], references: [id])
}

