datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// UPDATED USER MODEL
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String    // <--- ADDED: Required for Auth
  createdAt DateTime  @default(now()) // <--- ADDED: Good practice
  bookings  Booking[] 
}

model Train {
  id            Int       @id @default(autoincrement())
  trainNumber   String    @unique
  name          String
  currentStatus String
  
  availableSeats Int      @default(100) 
  
  schedule      Schedule[]
  bookings      Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  trainId   Int
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
  train     Train    @relation(fields: [trainId], references: [id])
}

model Station {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  name      String
  schedules Schedule[]
}

model Schedule {
  id            Int      @id @default(autoincrement())
  trainId       Int
  stationId     Int
  arrivalTime   DateTime
  departureTime DateTime
  sequenceOrder Int
  
  train         Train    @relation(fields: [trainId], references: [id])
  station       Station  @relation(fields: [stationId], references: [id])
}