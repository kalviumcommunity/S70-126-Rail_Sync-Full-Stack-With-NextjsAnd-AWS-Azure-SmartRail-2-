generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
}

model Train {
  id          String   @id @default(uuid())
  trainNumber String   @unique
  name        String
  source      String
  destination String
  status      String   // e.g., "On Time", "Delayed"
  platform    String?
  updatedAt   DateTime @updatedAt

  // âœ… FIXED: Changed to 'schedule' (Singular) to match your code
  schedule    Schedule[]
}

model Station {
  id        String     @id @default(uuid())
  code      String     @unique // e.g., "NDLS"
  name      String     // e.g., "New Delhi"
  city      String
   
  // Relations
  schedules Schedule[]
}

model Schedule {
  id            String   @id @default(uuid())
  trainId       String
  stationId     String
  arrivalTime   DateTime
  departureTime DateTime
  platform      String?

  // Relations
  train   Train   @relation(fields: [trainId], references: [id])
  station Station @relation(fields: [stationId], references: [id])
}